<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Custom styles rather than app themes -->
    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/CustomTabTextStyle</item>
        <item name="tabBackground">@color/colorPrimaryDark</item>
    </style>
    <!-- This is used as part of CustomTabLayoutStyle -->
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_textsize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- MessageListItem -->
    <style name="ListItemTitleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/listitem_title_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ListItemDateStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/listitem_date_textsize</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <!-- Info Tab -->
    <style name="InfoTitleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/info_title_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="InfoTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/info_text_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="InfoDisclaimerStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/grey</item>
    </style>
    <!-- MessageView and CasoTab -->
    <style name="MessageViewTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/message_view_title_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MessageViewDate" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/message_view_date_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Floating Action Button -->
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/rectangle_border_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_bar_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/fab_bar_vertical_margin</item>
        <item name="android:clickable">true</item>
        <item name="fabSize">normal</item>
    </style>
</resources>

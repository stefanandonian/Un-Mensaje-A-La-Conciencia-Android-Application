    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/concienciaBanner_ImageView"
        android:src="@drawable/un_mensaje_al_conciencia_banner_9"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:scaleType="fitXY" />

    <android.support.design.widget.TabLayout
        android:id="@+id/mensaje_caso_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/concienciaBanner_ImageView"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:backgroundTint="@color/colorPrimary">

        <android.support.design.widget.TabItem
            android:id="@+id/mensaje_tabItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/daily_message" />

        <android.support.design.widget.TabItem
            android:id="@+id/caso_tabItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/case_of_the_week" />

        <android.support.design.widget.TabItem
            android:id="@+id/information_tabItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/information"/>

    </android.support.design.widget.TabLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/mensaje_caso_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mensaje_caso_tablayout"/>

</RelativeLayout>

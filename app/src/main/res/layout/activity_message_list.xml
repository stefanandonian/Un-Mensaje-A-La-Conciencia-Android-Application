<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/AppTheme.NoActionBar"
                android:background="@color/lightGrey"
                tools:context=".Activities.MessageListActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_message_list_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/message_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ImageView
        android:id="@+id/concienciaBanner"
        android:layout_width="match_parent"
        android:src="@drawable/un_mensaje_al_conciencia_banner_9"
        android:layout_height="@android:dimen/thumbnail_height"
        android:scaleType="fitXY"
        android:layout_below="@id/activity_message_list_app_bar"/>

    <fragment
        android:name="net.conciencia.mensajeandroid.Fragments.SermonListFragment"
        android:id="@+id/fragmentView_sermon_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/concienciaBanner"
        tools:layout="@layout/fragment_sermon_list"
        android:layout_margin="15dp"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/caso_title_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Caso de la Semana : 405"
        android:textSize="30dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="14dp" />

    <TextView
        android:id="@+id/caso_date"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:text="March 28th, 1994"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/caso_title_id" />

    <ScrollView
        android:id="@+id/caso_text_scrollview"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

    </ScrollView>

    <TextView
        android:id="@+id/caso_text"
        android:text="To create a custom Behavior It isn't as difficult as it may seem, to begin we must take into account two core elements: child and dependency."
        android:layout_width="376dp"
        android:layout_height="397dp"
        tools:layout_editor_absoluteY="111dp"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="512dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/caso_internet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web"
            android:layout_gravity="left"
            tools:layout_editor_absoluteY="312dp"
            tools:layout_editor_absoluteX="222dp" />

        <Button
            android:id="@+id/caso_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_gravity="right" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>